<% if book.favorited_by?(current_user) %>
  <span>
    <%= link_to book.favorites.count, book_favorites_path(book), method: :delete, class: "fas fa-heart heart_red", remote: true %>
  </span>
  <% else %>
  <span>
    <%= link_to book.favorites.count, book_favorites_path(book), method: :post, class: "fas fa-heart heart_blue", remote: true %>
  </span>
<% end %>