<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <span><%= link_to"Bookers", root_path, class: "navbar-brand" %></span>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">

        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
          <li><span class="fas fa-home nav-link text-light" ></span><%= link_to"Home", user_path(current_user.id) %></li>
          <li><span class="fas fa-users nav-link text-light"></span><%= link_to"Users", users_path %></li>
          <li><span class="fas fa-book-open nav-link text-light"></span><%= link_to"Books", books_path %></li>
          <li><span class="fas fa-sign-out-alt nav-link text-light"></span><%= link_to"logout", destroy_user_session_path, method: :delete %></li>
          <% else %>
          <li><span class="fas fa-home nav-link text-light"></span><%= link_to"Home", root_path %></li>
          <li><span class="fas fa-link nav-link text-light"></span><%= link_to"About", home_about_path %></li>
          <li><span class="fas fa-user-plus nav-link text-light"></span><%= link_to"sign up", new_user_registration_path %></li>
          <li><span class="fas fa-sign-in-alt nav-link text-light"></span><%= link_to"login", user_session_path %></li>
          <% end %>
        </ul>

      </div>
    </div>
  </nav>
</header>

<main>
  <p id="notice">
  <%= flash[:notice] %>
  </p>
  <div class="text-right">
    <div class="container px-5 px-sm-0">
      <% if user_signed_in? %>
        <%= form_with url: search_path, method: :get, local: :true do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([['User'], ['Book']]) %>
          <%= f.select :search, options_for_select([["perfect","perfect_match"], ["partial","partial_match"], ["forward","forward_match"], ["backward","backward_match"]]) %>
          <%= f.submit "search" %>
        <% end %>
      <% end %>
    </div>
  </div>
    <%= yield %>
</main>

<footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
  </body>
</html>
