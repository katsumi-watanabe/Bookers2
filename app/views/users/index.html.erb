<%= render 'users/list' %>

 <div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th>following</th>
      <th>followers</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg',fallback: "no_image.jpg" %>
          </td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
        <td>
          <% if current_user.id != user.id %>
          <% if current_user.following?(user) %>
            <%= link_to "Unfollow", user_relationships_path(user.id), class: "btn btn-outline-info", method: :delete %>
          <% else %>
            <%= link_to "Follow", user_relationships_path(user.id), class: "btn btn-outline-primary", method: :post %>
          <% end %>
          </td>
          <% end %>
        <td><%= link_to"Show", user_path(user.id) %></td>
        <% end %>
      </tr>
  </tbody>
  </table>
  </div>
