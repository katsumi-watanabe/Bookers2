<% if @renge == 'User' %>
  <h3>Users search for "<%= @word %>"</h3>
<% else @renge == 'Book' %>
  <h3>Books search for "<%= @word %>"</h3>
<% end %>

    <% if @range == "User" %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>name</th>
            <th>introduction</th>
          </tr>
        </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg',fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
      <% else %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg',fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
    <% end %>
  </table>
