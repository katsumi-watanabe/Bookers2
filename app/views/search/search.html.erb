  <div class="text-center">
  <%= form_with url: search_path, method: :get, local: :true do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([['User'], ['Book']]) %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"], ["前方一致","forward_match"], ["後方一致","backward_match"]]) %>
    <%= f.submit "検索" %>
  <% end %>
  </div>

  <h2>Books search for "test"</h2>
    <% if @range == "User" %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>name</th>
            <th>introduction</th>
          </tr>
        </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg',fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
      <% else %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg',fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
    <% end %>
  </table>
